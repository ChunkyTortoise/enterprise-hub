# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# Example: Third-party API keys (if needed in future)
# API_KEY=your_api_key_here
# API_SECRET=your_api_secret_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# App environment (development, staging, production)
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# DATA SOURCES
# =============================================================================

# Yahoo Finance settings (yfinance doesn't require API key, but you can configure behavior)
DATA_CACHE_TTL=300  # Cache time-to-live in seconds (5 minutes)
REQUEST_TIMEOUT=10  # API request timeout in seconds

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Default ticker symbol
DEFAULT_TICKER=SPY

# Default time period options
DEFAULT_PERIOD=1y

# Chart settings
CHART_HEIGHT=900
CHART_THEME=streamlit  # streamlit, plotly, plotly_white, plotly_dark

# =============================================================================
# RATE LIMITING (Future feature)
# =============================================================================

# Maximum requests per minute
# MAX_REQUESTS_PER_MINUTE=60

# =============================================================================
# EXTERNAL SERVICES (Future features)
# =============================================================================

# Database connection (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis cache (if needed)
# REDIS_URL=redis://localhost:6379/0

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_analytics_id_here
